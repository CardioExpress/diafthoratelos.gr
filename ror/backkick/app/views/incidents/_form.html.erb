<%= form_for(@incident) do |f| %>
  <% if @incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
      <% @incident.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="Cloud"><%= t(:start_here_prompt) %></div>
  <div class="diafthora">
    <div class="box dtm">
      <div class="dtm-ddl-holder">
        <div class="left dll">

	  <div class="field">
	    <%= f.date_select :incident_date %>
	  </div>
	</div>
	<div class="clear"></div>
      </div>
    </div>
    
    <div class="box category">
      <div class="category-ddl-holder">
	<div class="dll">
	  <div class="field ui-widget">
	    <%= collection_select(:public_entity, :category_id, Category.all,
		:id, :name, {:include_blank => true} ) %>
	  </div>
	</div>
      </div>
    </div>

    <div class="box place">
      <div class="place-ddl-holder">
        <div class="dll">
	  <div class="field ui-widget"> 
	    <%= search_field_tag :public_entity_name,
		params[:public_entity_name],
		:value => t(:public_entity_name)
	    %>
	  </div>
	</div>
      </div>
    </div>
    <div class="clear"></div>
    <div class="box money">
      <div class="money-ddl-holder">

	<div class="field">
	  <div class="moneytxt moneyasked">
	    <%= f.text_field :money_asked,
		:value => t(:money_asked) %>
	  </div>
	</div>
	<div class="field">
	  <div class="moneytxt moneygiven">
	    <%= f.text_field :money_given,
		:value => t(:money_given) %>
	  </div>
	</div>

      </div>
    </div>
    
    <div class="box map">
      <div class="map-ddl-holder">
        <div class="map">
          <!-- <iframe width="261" height="178" frameborder="0" -->
	  <!-- 	  scrolling="no" marginheight="0" marginwidth="0" -->
	  <!-- 	  src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=el&amp;geocode=&amp;q=greece,athens&amp;aq=&amp;sll=35.51383,24.018037&amp;sspn=0.062109,0.132093&amp;t=m&amp;ie=UTF8&amp;hq=&amp;hnear=%CE%91%CE%B8%CE%AE%CE%BD%CE%B1,+%CE%9A%CE%B5%CE%BD%CF%84%CF%81%CE%B9%CE%BA%CF%8C%CF%82+%CE%A4%CE%BF%CE%BC%CE%AD%CE%B1%CF%82+%CE%91%CE%B8%CE%B7%CE%BD%CF%8E%CE%BD,+%CE%95%CE%BB%CE%BB%CE%AC%CE%B4%CE%B1&amp;z=13&amp;ll=37.983715,23.72931&amp;output=embed"></iframe> -->
	  <br />
        </div>
        
        <div class="dll">
          <select id="Select1" class="place_dll">
            <option value="0"><%= t(:area_city) %></option>
          </select>
        </div>
      </div>
    </div>

    <div class="box comments">
      <div class="comments-ddl-holder">
        <div class="commentstxt comment">

	  <div class="field">
	    <%= f.text_area :description,
		:value => t(:description),
   	        :onclick => "clearTxt(this, '#{t(:description)}')",
	        :onblur => "resetTxt(this, '#{t(:description)}')" %>
	  </div>
	</div>
        <div class="sub-text"><%= t(:non_identifying) %></div>
      </div>
    </div>
    <div class="clear"></div>

    <div class="bottom">
      <div id="recaptcha_widget" style="display:none">
        <div class="captcha">
      	  <div id="recaptcha_image" style="width:100px"></div>
      	</div>

	<div class="pointer"><%= image_tag "diafthora/pointer.png" %></div>

	<div class="txt recaptchatxt">
	  <input type="text" id="recaptcha_response_field"
		 name="recaptcha_response_field" />
	</div>

   	<div class="recaptcha_only_if_incorrect_sol"
   	style="color:red">Incorrect, please try again</div>
		
      <div id="recaptcha_icons_logo">
      <table border="0" cellspacing="0" cellpadding="0">
	<tr>
	  <td>
	    <img width="25" height="18"
		 alt="Get a new challenge"
		 onclick="javascript:Recaptcha.reload()"
		 src="http://www.google.com/recaptcha/api/img/clean/refresh.png"/>
	  </td>
	  <td rowspan="4">
	    <img id="recaptcha_logo" alt="" width="71" height="36"
		 src="http://www.google.com/recaptcha/api/img/clean/logo.png"/>
	  </td>
	  </tr>
	<tr>
	  <td>
	    <span class="recaptcha_only_if_image"
	       title="Get an audio challenge"
	       tabindex="3">
	      <img id="recaptcha_switch_audio" width="25" height="15"
		   alt="Get an audio challenge"
		   onclick="javascript:Recaptcha.switch_type('audio');"
		   src="http://www.google.com/recaptcha/api/img/clean/audio.png"/>
	    </span>
	  </td>
	</tr>
	<tr>
	  <td>
	    <span id="recaptcha_switch_img_btn"
		  class="recaptcha_only_if_audio"
		  tabindex="4">
	      <img id="recaptcha_switch_img" width="25" height="15"
		   alt="Get a visual challenge"
		   onclick="javascript:Recaptcha.switch_type('image');"
		   src="http://www.google.com/recaptcha/api/img/clean/text.png"/>
	    </span>
	  </td>
	</tr>
	<tr>
	  <td>
	    <span id="recaptcha_whatsthis_btn"
		  title="Help"
		  tabindex="5">
	      <img id="recaptcha_whatsthis" width="25" height="16"
		   onclick="javascript:Recaptcha.showhelp()"
		   src="http://www.google.com/recaptcha/api/img/clean/help.png"
		   alt="Help"/>
	    </span>
	  </td>
	</tr>
      </table>
      </div>
      
      <div class="clear"></div>
            
      <!--   <div class="errormessage">Θα πρέπει να συμπληρώσετε όλα τα απαραίτητα πεδία για να προχωρήσετε στο βήμα της υποβολής του περιστατικού σας.</div> -->
      <br/>
      <div class="actions">
	<%= image_tag "btns/return.png", :border => "0",
	:onclick => "parent.document.location='#'" %>
	<%= f.submit "Submit",
	    :type => :image,
	:src => asset_path("diafthora/ypovoli.png") %>
      </div>
      
      <%= recaptcha_tags %>
	
      <div class="clear"></div>
    </div>
  </div>
	  
  </div>
    
<% end %>
